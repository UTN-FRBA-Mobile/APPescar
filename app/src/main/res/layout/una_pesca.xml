<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:orientation="horizontal"
    android:weightSum="1">


    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/lv_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/lv_list_image"
            android:layout_width="80dip"
            android:layout_height="50dip"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/lv_timestamp"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/lv_detalle"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:layout_weight="0.50">

        <TextView
            android:id="@+id/lv_fish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Pescado"
            />

        <TextView
            android:id="@+id/lv_bait"
            android:text="Carnada"
            android:layout_marginTop="1dip"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/lv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Linea"
            />


        <TextView
            android:id="@+id/lv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="DescripciÃ³n"
            />
    </LinearLayout>


</LinearLayout>